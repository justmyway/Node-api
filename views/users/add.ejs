<!doctype html>
<html>

    <% include ../partials/head %>

    <body>
        <div id="layout" class="content pure-g">

            <% include ../partials/header %>

            <% include submenu %>

            <div id="main" class="pure-u-1">
                <div class="email-content">
                    <div class="email-content-header pure-g">
                        <div class="pure-u-1">
                            <h1 class="email-content-title">Registeren</h1>
                        </div>
                    </div>
                    <div class="email-content-body">
                        <% if (flash) { %>
                        <div class="info error">
                            <h3><%= flash.registerMessage %></h3>                            
                        </div>
                        <% } %>
                        <form class="pure-form pure-form-aligned" action="/profile/register" method="post">
                            <fieldset>
                                <div class="pure-control-group">
                                    <label for="username">Gebruikersnaam</label>
                                    <input id="username" type="text" placeholder="Gebruikersnaam">
                                </div>

                                <div class="pure-control-group">
                                    <label for="password">Wachtwoord</label>
                                    <input id="password" type="password" placeholder="Password">
                                </div>

                                <div class="pure-control-group">
                                    <label for="email">Email Address</label>
                                    <input id="email" type="email" placeholder="example@website.com">
                                </div>

                                <div class="pure-control-group">
                                    <label for="name">Volledige naam</label>
                                    <input id="name" type="text" placeholder="Mickey van de Ven">
                                </div>

                                <div class="pure-controls">
                                    <label for="cb" class="pure-checkbox">
                                        <input id="cb" type="checkbox"> Ik heb de terms en condities gelezen, en ga accoord.
                                    </label>

                                    <button type="submit" class="pure-button pure-button-primary">Aanmelden</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </body>

</html>