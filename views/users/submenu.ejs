<!-- Sub menu -->
<div id="list" class="pure-u-1">
    <div class="email-item <%= page == 'login' ? 'email-item-selected' : '' %> pure-g">
        <div class="pure-u">
            <img class="email-avatar" height="64" width="64" src="/images/login.png">
        </div>

        <div class="pure-u-3-4">
            <h5 class="email-name">Account</h5>
            <h4 class="email-subject">Inloggen</h4>
            <p class="email-desc">
                Inloggen kan hier. Als je een account hebt kan dit natuurlijk.
            </p>
        </div>
    </div>

    <div class="email-item <%= page == 'register' ? 'email-item-selected' : '' %> pure-g">
        <div class="pure-u">
            <img class="email-avatar" height="64" width="64" src="/images/add.png">
        </div>

        <div class="pure-u-3-4">
            <h5 class="email-name">Account</h5>
            <h4 class="email-subject">Registreren</h4>
            <p class="email-desc">
                Nieuw? Klik hier om je te registreren.
            </p>
        </div>
    </div>
</div>